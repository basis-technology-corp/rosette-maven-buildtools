<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>com.basistech</groupId>
    <artifactId>buildtools</artifactId>
    <version>5</version>
    <name>Configuration files for checkstyle and PMD</name>
    <packaging>jar</packaging>
    <distributionManagement>
        <repository>
            <id>basistech.repo</id>
            <name>Basis Local Repository</name>
            <url>http://maven.basistech.net/nexus/content/repositories/releases/</url>
        </repository>
        <snapshotRepository>
            <id>basistech.snapshot.repo</id>
            <name>Basistech Local Snapshot Repository</name>
            <url>http://maven.basistech.net/nexus/content/repositories/snapshots/</url>
            <uniqueVersion>false</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <connection>scm:svn:http://svn.basistech.net/engineering/maven-support/buildtools/tags/buildtools-5</connection>
        <developerConnection>scm:svn:http://svn.basistech.net/engineering/maven-support/buildtools/tags/buildtools-5</developerConnection>
    </scm>

    <properties>
        <maven.test.skip>true</maven.test.skip>
    </properties>

    <build>
      <defaultGoal>install</defaultGoal>
    </build>

</project>
